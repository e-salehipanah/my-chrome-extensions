{
    "name": "browser_action",
    "manifest_version": 2,
    "version": "1.0",
    "description": "An example browser action extension",
    "author": "Ebrahim Salehipanah",
    "browser_action": {
        "default_title": " Use this to open the popup",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"],
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js" : ["content.js"],
        "css" : ["content.css"]
    }]
}